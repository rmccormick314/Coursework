CC = gcc
DEBUG = -g
CFLAGS = -Wall -std=c99 -pedantic -c $(DEBUG)
LFLAGS = -Wall -std=c99 -pedantic $(DEBUG)

Program_5 : Program_5.o StringUtils.o
	$(CC) $(LFLAGS) Program_5.o StringUtils.o -o Program_5

Program_5.o : Program_5.c StringUtils.h
	$(CC) $(CFLAGS) Program_5.c

StringUtils.o : StringUtils.c StringUtils.h
	$(CC) $(CFLAGS) StringUtils.c

clean:
	\rm *.o Program_5
