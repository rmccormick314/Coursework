CC = gcc
DEBUG = -g
CFLAGS = -Wall -std=c99 -pedantic -c $(DEBUG)
LFLAGS = -Wall -std=c99 -pedantic $(DEBUG)

simulator: OS_SimDriver.o simulator.o configops.o metadataops.o stringUtils.o processops.o SimTimer.o
	$(CC) $(LFLAGS) -pthread OS_SimDriver.o simulator.o configops.o metadataops.o stringUtils.o processops.o SimTimer.o -o sim02

OS_SimDriver.o: OS_SimDriver.c OS_SimDriver.h
	$(CC) $(CFLAGS) OS_SimDriver.c

simulator.o: simulator.c simulator.h
	$(CC) $(CFLAGS) simulator.c

configops.o: configops.c configops.h
	$(CC) $(CFLAGS) configops.c

metadataops.o: metadataops.c metadataops.h
	$(CC) $(CFLAGS) metadataops.c

stringUtils.o: stringUtils.c stringUtils.h
	$(CC) $(CFLAGS) stringUtils.c

processops.o: processops.c processops.h
	$(CC) $(CFLAGS) processops.c

SimTimer.o: SimTimer.c SimTimer.h
	$(CC) $(CFLAGS) SimTimer.c

clean:
	\rm *.o sim02
